<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<Spinner-->
    <!--android:id="@+id/spinner2"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#90c7b5"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/teamFlagOne"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/noteamfound" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="45sp"
            android:text="VS"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/com_facebook_button_background_color"
            tools:text="VS" />

        <ImageView
            android:id="@+id/teamFlagTwo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:src="@drawable/noteamfound" />

        <Switch
            android:id="@+id/scset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#39864b"
            android:foregroundTint="@color/cardview_dark_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#39864b"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/teamOne"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_horizontal"
            android:text="PAK"
            android:textColor="#360101"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teamTwo"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_horizontal"
            android:text="ENG"
            android:textColor="#360101"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:text="TextView"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/setCoverage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60000000"
        android:text="Set Score Update"
        android:textColor="@color/defult" />

</LinearLayout>
